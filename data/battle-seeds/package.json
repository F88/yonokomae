{
  "name": "@yonokomae/data-battle-seeds",
  "version": "1.1.0",
  "description": "Battle seed data for Yono Komae War",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "tsx scripts/generate-battle-index.ts",
    "build": "tsc",
    "generate:battles": "tsx scripts/generate-battle-index.ts",
    "generate:drafts": "tsx scripts/generate-battle-index.ts",
    "postbuild": "tsx scripts/generate-all-battles-json.ts",
    "_watch:tsc": "tsc -w --preserveWatchOutput",
    "_watch:gen": "tsx scripts/watch-generate-battle-index.ts",
    "watch": "node ./scripts/dev-watch.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@yonokomae/schema": "workspace:*",
    "@yonokomae/types": "workspace:*"
  },
  "devDependencies": {
    "vite": "^7.1.4",
    "chokidar": "^3.6.0",
    "execa": "^9.3.0"
  }
}

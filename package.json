{
  "name": "yonokomae",
  "description": "A playground for generating and decoding UUIDs.",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/F88/yonokomae.git"
  },
  "keywords": [],
  "author": "F88",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/F88/yonokomae/issues"
  },
  "homepage": "https://github.com/F88/yonokomae#readme",
  "scripts": {
    "dev": "vite",
    "dev:api": "VITE_API_BASE_URL=http://localhost:8787/api vite",
    "build": "VITE_BASE_PATH=/ vite build",
    "build:ghpages": "VITE_BASE_PATH=/yonokomae/ vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "mock-api": "node ./mock-api/server.ts",
    "deploy:ghpages": "npm run build:ghpages && gh-pages -d dist -m \"Updates --skip-ci\"",
    "test": "vitest run",
    "test:seeds": "vitest run src/yk/repo/seed-system/seeds.validation.test.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "ops:build": "tsc -p tsconfig.ops.json",
    "ops:export-usage-examples-to-tsv": "npm run ops:build && node dist/ops/export-usage-examples-to-tsv.js",
    "ops:export-users-voice-to-tsv": "npm run ops:build && node dist/ops/export-users-voice-to-tsv.js",
    "e2e": "playwright test --grep-invert @performance",
    "e2e:all": "playwright test",
    "e2e:headed": "playwright test --headed --project=chromium",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "gh-pages": "^6.3.0",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-fast-marquee": "^1.6.5",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "msw": "^2.6.8",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  }
}
